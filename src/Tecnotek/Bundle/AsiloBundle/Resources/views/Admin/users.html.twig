{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}

{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tecnotek_users.js') }}"></script>

    <script type="text/javascript">
        Tecnotek.module = "users-list";
        Tecnotek.UI.translates["edit"] = "{{ 'edit'|trans }}";
        Tecnotek.UI.translates['field.not.empty'] = "{{ 'validation.not.empty'|trans }}";
        Tecnotek.UI.translates['confirm-delete'] = "{{ 'confirm.catalog.delete'|trans }}";
        Tecnotek.UI.urls['save'] = "{{ path('_admin_users_save') }}";
        Tecnotek.UI.urls['delete'] = "{{ path('_admin_users_delete') }}";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-uesrs"></i> {{ 'users'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-users"></i>{{ 'users'|trans }}</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-12">
            <div class="panel panel-default panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading">{{ 'users'|trans }}</div>
                <!-- Table -->
                <div id="custom-toolbar">
                    <div class="form-inline" role="form">
                        <button type="button" id="btn-new" class="btn btn-default" ref="0"
                                title="{{ 'create'|trans }}">{{ 'new'|trans }}</button>
                    </div>
                </div>

                <table id="catalog-list" class="table table-striped table-bordered table-hover"
                       data-toolbar="#custom-toolbar"
                       data-toggle="table"
                       data-url="{{ path('_admin_users_list') }}"
                       data-side-pagination="server"
                       data-height="400"
                       data-card-view="false"
                       data-show-refresh="true" data-show-toggle="true" data-show-columns="true"
                       data-search="true" data-select-item-name="toolbar1"
                       data-pagination="true"
                       data-page-list="[10, 25, 50, 100]"
                       data-sort-name="name"
                       data-sort-order="asc">
                    <thead>
                    <tr>
                        <th data-field="name" data-sortable="true" class="col-md-3">
                            {{ 'name'|trans }}
                        </th>
                        <th data-field="lastname" data-sortable="true" class="col-md-3">
                            {{ 'lastname'|trans }}
                        </th>
                        <th data-field="username" data-sortable="true" class="col-md-3">
                            {{ 'username'|trans }}
                        </th>
                        <th data-field="email" data-sortable="true" class="col-md-3">
                            <i class="glyphicon glyphicon-envelope"></i>
                            {{ 'email'|trans }}
                        </th>
                        <th data-field="cellPhone" data-sortable="true" class="col-md-2">
                            <i class="glyphicon glyphicon-phone"></i>
                            {{ 'cellPhone'|trans }}
                        </th>
                        <th data-field="isActive" data-sortable="true" class="col-md-2"
                            data-formatter="Tecnotek.Users.List.yesNoFormat">
                            {{ 'active'|trans }}
                        </th>
                        <th data-field="operate" data-card-visible="false" data-searchable="false"
                            data-formatter="Tecnotek.Users.List.operateFormatter"
                            data-events="Tecnotek.Users.List.operateEvents">{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <!--/col-->

        <div class="col-md-4">
            <div class="row">
                <div class="col-lg-12">
                    <div id="panel-catalog" class="panel panel-default hidden">
                        <div class="panel-heading">
                            <div id="panel-catalog-title" class="pull-left">{{ 'create'|trans }}</div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="panel-body">
                            <div class="padd">
                                <div class="form quick-post">
                                    <form class="form-horizontal" id="form-catalog">
                                        <!-- Username -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="username">{{ 'username'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="username" name="username" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- Name -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="name">{{ 'name'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="name" name="name" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- LastName -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="lastname">{{ 'lastname'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="lastname" name="lastname" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- Email -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="email">{{ 'email'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="email" name="email" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- cellPhone -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="cellPhone">{{ 'cellPhone'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="cellPhone" name="cellPhone" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- isActive -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="isActive">{{ 'active'|trans }}</label>

                                            <div class="col-lg-8">
                                                <input type="checkbox" class="form-control" id="isActive" name="isActive">
                                            </div>
                                        </div>

                                        <!-- Buttons -->
                                        <div class="form-group">
                                            <!-- Buttons -->
                                            <div class="col-lg-offset-2 col-lg-9">
                                                <button type="submit"
                                                        class="btn btn-primary">{{ 'save'|trans }}</button>
                                                <button id="btn-cancel" type="reset"
                                                        class="btn btn-default">{{ 'cancel'|trans }}</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="widget-foot">
                                <!-- Footer goes here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock mainContent %}