{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}


{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tecnotek_reports.js') }}"></script>
    <script src="{{ asset('admin/js/jquery.printElement.min.js') }}"></script>
    <script type="text/javascript">
        Tecnotek.module = "reports";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-table"></i> {{ 'CONAPAN Report'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-table"></i>{{ 'CONAPAN Report'|trans }}</li>
                <li id="btnPrint" style="float: right; cursor: pointer;"><i class="fa fa-print"></i>{{ 'label.print'|trans }}</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div id="report">
                <div class="row conapam-report">
                    <div class="col-lg-12 title text-center">
                        Lista de Adultos Mayores Beneficiarios de los Recursos Provenientes de la Ley N 7972 y 8783 Presupuesto 2015
                    </div>
                    <div class="col-lg-12 subtitle text-center">
                        Corte al: {{ today }} para el Giro de Recursos {{ endOfMonth }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-lg-6 col-sm-12 conapam-report">
                        <div class="col-lg-12 account">6-04-01-SJ-CD-13</div>
                        <div class="col-lg-12">Asociaci&oacute;n C&iacute;vica Pilar Gamboa Mes&eacute;n</div>
                        <div class="col-lg-6">3-002-143462</div>
                        <div class="col-lg-6">Modalidad</div>
                        <div class="col-lg-6">2276 8192</div>
                        <div class="col-lg-6">Direcci&oacute;n E: &nbsp;&nbsp;&nbsp; pilargamboa@hotmail.com</div>
                        <div class="col-lg-12">Gonzalo Lizano Vindas</div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <table border="1" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>{{ 'patients.approved'|trans }}</th>
                                    <th>{{ 'spaces.completed'|trans }}</th>
                                    <th>{{ 'spaces.availabled'|trans }}</th>
                                    <th>{{ 'mensual.subsidio'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Ley N 8783</td>
                                    <td>20</td>
                                    <td>{{ counter8763 }}</td>
                                    <td>{{ 20 - counter8763 }}</td>
                                    <td>59,288.00</td>
                                </tr>
                                <tr>
                                    <td>Ley N 7972</td>
                                    <td>20</td>
                                    <td>{{ counter7972 }}</td>
                                    <td>{{ 20 - counter7972 }}</td>
                                    <td>28,599.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-lg-12">
                        <table border="1" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>{%trans%}conapam.name{%endtrans%}</th>
                                    <th>{%trans%}conapam.id{%endtrans%}</th>
                                    <th>{%trans%}conapam.birthday{%endtrans%}</th>
                                    <th>{%trans%}age{%endtrans%}</th>
                                    <th>{%trans%}conapam.gender{%endtrans%}</th>
                                    <th>{%trans%}conapam.pentions{%endtrans%}</th>
                                    <th>{%trans%}conapam.pentions.amount{%endtrans%}</th>
                                    <th>{%trans%}conapam.familiar.income{%endtrans%}</th>
                                    <th>{%trans%}total{%endtrans%}</th>
                                    <th>{%trans%}conapam.law.7972{%endtrans%}</th>
                                    <th>{%trans%}conapam.law.8763{%endtrans%}</th>
                                    <th>{%trans%}conapam.obs.date{%endtrans%}</th>
                                    <th>{%trans%}conapam.status{%endtrans%}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for patient in entities %}
                                <tr>
                                    <td>{{ patient.name }}</td>
                                    <td>{{ patient.id }}</td>
                                    <td>{{ patient.birthday }}</td>
                                    <td>{{ patient.age }}</td>
                                    <td>{{ patient.gender }}</td>
                                    <td>{{ patient.pentions }}</td>
                                    <td>{{ patient.pentionsA }}</td>
                                    <td>{{ patient.familiar }}</td>
                                    <td>{{ patient.total }}</td>
                                    <td>{{ patient.law7972 }}</td>
                                    <td>{{ patient.law8763 }}</td>
                                    <td>{{ patient.obsDate }}</td>
                                    <td>{{ patient.status }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock mainContent %}