{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}

{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tecnotek_profile.js') }}"></script>

    <script type="text/javascript">
        Tecnotek.module = "my-account";
        Tecnotek.UI.vars["id"] = {{ app.user.id }};
        Tecnotek.UI.translates["edit"] = "{{ 'edit'|trans }}";
        Tecnotek.UI.urls['update-account'] = "{{ path('_admin_account_update') }}";
        Tecnotek.UI.translates['password.confirm.not.same'] = "{{ 'password.confirm.error'|trans }}";
        Tecnotek.UI.translates['password.lenght.error'] = "{{ 'password.lenght.error'|trans }}";
        Tecnotek.UI.urls['update-password'] = "{{ path('_admin_account_update_password') }}";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="icon_profile"></i> {{ 'my.profile'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="icon_profile"></i>{{ 'my.profile'|trans }}</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!--tab nav start-->
            <section class="panel">
                <header class="panel-heading tab-bg-primary ">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#main">{{ 'my.profile'|trans }}</a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#edit">{{ 'edit.profile'|trans }}</a>
                        </li>
                    </ul>
                </header>
                <div class="panel-body">
                    <div class="tab-content">
                        <div id="main" class="tab-pane active">
                            <div class="form">
                                <h1>{{ 'my.details'|trans }}</h1>
                                <!-- Your details -->
                                <div class="address">
                                    <address>
                                        <!-- Your name -->
                                        <strong id="account-name">{{ app.user.name ~ " " ~ app.user.lastname}}</strong><br>
                                        <!-- Address
                                        795 Folsom Ave, Suite 600<br>
                                        San Francisco, CA 94107<br> -->

                                        <!-- Phone number -->
                                        <abbr title="Phone">T:</abbr> <span id="account-phone">{{ app.user.cellPhone }}</span><br>
                                        <a href="mailto:#" id="account-email">{{ app.user.email }}</a>
                                    </address>
                                </div>
                            </div>
                        </div>
                        <div id="edit" class="tab-pane">
                            <section class="panel">
                                <div class="row">
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">{{ "update.account.info"|trans }}</div>
                                            <div class="panel-body">
                                                <form class="form-horizontal form-align-left" id="form-info">
                                                    <!-- Name -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="name">{{ 'name'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="text" class="form-control" id="name" name="name" required="required"
                                                                   maxlength="250" value="{{ app.user.name }}">
                                                        </div>
                                                    </div>

                                                    <!-- LastName -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="lastname">{{ 'lastname'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="text" class="form-control" id="lastname" name="lastname" required="required"
                                                                   maxlength="250" value="{{ app.user.lastname }}">
                                                        </div>
                                                    </div>

                                                    <!-- Email -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="email">{{ 'email'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="text" class="form-control" id="email" name="email" required="required"
                                                                   maxlength="250" value="{{ app.user.email }}">
                                                        </div>
                                                    </div>

                                                    <!-- cellPhone -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="cellPhone">{{ 'cellPhone'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="text" class="form-control" id="cellPhone" name="cellPhone" required="required"
                                                                   maxlength="250" value="{{ app.user.cellPhone }}">
                                                        </div>
                                                    </div>

                                                    <!-- Buttons -->
                                                    <div class="form-group">
                                                        <!-- Buttons -->
                                                        <div class="col-lg-offset-3 col-lg-6 text-center">
                                                            <button type="submit"
                                                                    class="btn btn-primary">{{ 'save'|trans }}</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">{{ "change.password"|trans }}</div>
                                            <div class="panel-body">
                                                <form class="form-horizontal form-align-left" id="form-password">
                                                    <!-- Current Password -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="current">{{ 'current.password'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="password" class="form-control" id="current" name="current" required="required"
                                                                   maxlength="250" value="">
                                                        </div>
                                                    </div>

                                                    <!-- New Password -->
                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="new">{{ 'new.password'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="password" class="form-control" id="new" name="new" required="required"
                                                                   data-minlength="6" data-maxlength="8" value="">
                                                            <span class="help-block">{{ 'password.lenght.error'|trans }}</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="control-label col-lg-4 col-sm-6" for="confirm">{{ 'confirm.password'|trans }} *</label>

                                                        <div class="col-lg-8 col-sm-6">
                                                            <input type="password" class="form-control" id="confirm" name="confirm" required="required"
                                                                   data-match="#new" data-match-error="Whoops, these don't match"
                                                                   placeholder="Confirm" value="">
                                                            <div class="help-block with-errors"></div>
                                                        </div>
                                                    </div>

                                                    <!-- Buttons -->
                                                    <div class="form-group">
                                                        <!-- Buttons -->
                                                        <div class="col-lg-offset-3 col-lg-6 text-center">
                                                            <button type="submit"
                                                                    class="btn btn-primary">{{ 'change'|trans }}</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <div id="contact" class="tab-pane">Contact</div>
                    </div>
                </div>
            </section>
            <!--tab nav start-->
        </div>
    </div>
{% endblock mainContent %}